@import 'normalize';

$primary-color: #f5f5f5;

@mixin header-navbar {
	.wrapper {
		position: relative;
		.header {
			margin-top: 0;
			padding-top: 15px;
			width: 100%;
			.logo {
				float: left;
				margin-top: 10px;
				font-weight: 700;
				letter-spacing: -3px;
			}
			nav {
				float: right;
				margin-top: 20px;
				.nav-links {
					margin-left: 25px;
					font-size: 16px;
					font-weight: 400;
					transition: all 0.2s;
					color: rgba(255, 255, 255, .7);
				}
				.nav-links:hover, .active {
					color: rgba(255, 255, 255, 1);
				}
			}
		}
	}
}

* {
	margin: 0;
	padding: 0;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
}

body {
	background: #edefed;
	font-family: 'Raleway', sans-serif;
	font-size: 1rem;
	line-height: 1.3;
	h1 {
	}
}

.clearfix::before,
.clearfix::after {
    content: "";
    display: table;
}

.clearfix::after {
    clear: both;   
}

.hidden {
	display: none;
}

img {
	max-width: 100%;
	height: auto;
}

a {
	text-decoration: none;
	color: $primary-color;
}

.main, #head {
	min-height: 70vh;
	margin-bottom: 3rem;
	background: #5cc1af;
	background-image: linear-gradient(rgba(0,0,0,.3), rgba(0,0,0,.5)), url("https://static.pexels.com/photos/14676/pexels-photo-14676.png");
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	background-attachment: fixed;
	@include header-navbar;
}

@media (min-width: 80rem) {
	.wrapper {
		position: relative;
		max-width: 67.5rem;
		width: 100%;
		margin: 0 auto;
		padding: 0.5rem 0 2rem 0
	}
}

span, home-cta {
	width: 100%;
	text-align: center;
	color: $primary-color;
	h2 {
		font-size: 4.375rem;
		font-weight: 800;
		color: $primary-color;
		padding-top: 200px;
		letter-spacing: -1px;
		text-align: center;
	}
	h3 {
		font-size: 1.875rem;
		font-weight: 700;
		color: $primary-color;
		margin-top: 0;
		letter-spacing: -1px;
		text-align: center;
	}
	.port {
	text-align: center;
	}
}

.intro {
	line-height: 25px;
	margin-top: 2rem;
	font-weight: 300;
	color: $primary-color;
}

.intro, .action {
	text-align: center;
}

a.learn-btn {
	margin-top: 2rem;
	margin-right: 10px;
	padding: 0.75rem 1.75rem;
	text-align: center;
	display: inline-block;
	background: tomato;
}

a.learn-btn:hover {
	background: steelblue;
}

a.hire-btn {
	background-color: rgba(255,255,255,.14);
}

a.hire-btn:hover {
	background: rgba(255,255,255,.18);
}

.home-cta {
    transform: translateX(-50%);
    top: 160%;
    color: rgba(255,255,255,.8);
    display: block;
    font-size: 0.6875em;
    left: 50%;
    padding: 20px;
    position: absolute;
    letter-spacing: -2px;
    white-space: nowrap;
    letter-spacing: 2px;
    z-index: 2;   
}

.home-cta:hover {
    text-decoration: underline;   
}

/*****************************/
/* HEADER PORTFOLIO SECTION */
/****************************/
#head {
	min-height: 50vh;
	background: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.2)), image-url("c3.jpg");
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	.port {
		padding-top: 150px;
		font-size: 70px;
	}
}

main {
	.work-title {
		text-align: center;
		margin-bottom: 2rem;
		padding: 50px 0;
		font-weight: 700;
		color: #333;
	}
	.portfolio-item {
		float: left;
		margin: 0;
		margin-bottom: 3%;
		padding-left: 46px;
		&:first-of-type {
			padding-left: 0;
		}
	}
}

/*****************************/
/* 12 GRID FRAMEWORK */
/****************************/
.row {
	width: 100%;
}

.col-1 {
	width: 8.3333%;
}

.col-2 {
	width: 16.6666%;
}

.col-3 {
	width: 25%;
}

.col-4 {
	width: 33.3333%;
}

.col-5 {
	width: 41.6666%;
}

.col-6 {
	width: 50%;
}

.col-7 {
	width: 58.3333%;
}

.col-8 {
	width: 66.6666%;
}

.col-9 {
	width: 75%;
}

.col-10 {
	width: 83.333%;
}

.col-11 {
	width: 91.6666%;
}

.col-12 {
	width: 100%;
}

/*****************************/
/* CONTACT PAGE */
/****************************/
.contact-bg {
	background: #1c1c1c;
	@include header-navbar;
}

.contact-title {
	font-size: 60px;
	color: #222;
	margin: 2rem 0 1rem 0;
}

.details-title {
	font-size: 95px;
	color: #222;
}

hr.pad-bottom {
	margin-bottom: 1em;
}

.form-wrapper {
	margin-top: 1em;
}

input[type="text"],
input[type="email"],
textarea {
	max-width: 100%;
	width: 100%;
	border: 2px solid #ccc;
	margin: .25em 0 2em 0;
	padding: 1em .5em;
	height: 2.5em;
}

textarea {
	min-height: 15em;
}

input[type="submit"] {
	outline: none;
	border: 2px solid #ccc;
	background: transparent;
	text-align: center;
	font-size: 1em;
	padding: 1em 2em;
	&:hover {
		border: 2px solid tomato;
		color: tomato;
	}
}

/*****************************/
/* FOOTER SECTION */
/****************************/
footer {
	background: #1c1e29;
	padding: 2rem 0 1.5rem 0;
	font-size: 80%;
	line-height: 160%;
	nav, .address {
		color: inherit;
		float: left;
		margin-right: 6rem;
		h5 {
			margin-bottom: 1rem;
			font-size: 140%;
			color: #f5f5f5;
			font-weight: 800;
		}
	}
	nav h5 {
		letter-spacing: -2px;
		font-size: 150%;
	}
	nav ul {
		list-style: none;
		li a {
			margin: 0.5rem 0;
			font-size: 14px;
			font-weight: 800;
			color: #999;
		}
	}
	.address {
		color: #999;
		address {
			font-size: 90%;
		}
		address a {
			color: #999;
		}
		address {
			margin-bottom: 0.5rem;
		}
	}
	.footer-nav, .footer-nav-right {
		margin-bottom: 1rem;
		float: left;
	}
	footer-nav-right {

	}
	hr {
		opacity: 0.2;
	}
	.social {
		margin-top: 1.5rem;
		text-align: center;
		a {
			margin-right: 1.5rem;
			color: #ccc;
			font-size: 15px;
		}
	}
	small {
		color: #999;
		text-align: center;
		width: 100%;
		display: block;
		padding: 1rem 0 0 0;
	}
}
