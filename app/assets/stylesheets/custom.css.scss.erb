$primary-color: #f5f5f5;
$phi: 1.618;

$base_font_size: 16;
$px: (1 / $base_font_size) * 1rem;

@mixin header-navbar {
	.wrapper {
		position: relative;
		width: 100%;
		.header {
			margin-top: 0;
			padding-top: 1.25rem;
			margin-bottom: -1.875rem;
			width: 100%;
			.logo {
				float: left;
				margin-top: 0.625rem;
				font-weight: 400;
				letter-spacing: -0.1875rem;
			}
			.navicon {
				float: right;
				color: #fff;
				margin-top: 0.9rem;
				font-size: 1.5rem;
				display: none;
				.fa-bars, .fa-close {
					border: 1px solid #fff;
					padding: 0.25rem 0.375rem;
					border-radius: 0.25rem;
					cursor: pointer;
				}
			}
			nav {
				float: right;
				margin-top: 1.625rem;
				.nav-links {
					margin-left: 1.875rem;
					font-size: 0.875rem;
					text-transform: uppercase;
					font-weight: 400;
					transition: all 0.2s;
					color: rgba(255, 255, 255, .7);
					@media (max-width: 30.875rem) {
						font-size: 0.75rem;
					}
					@media (max-width: 21.875rem) {
						font-size: 0.625rem;
					}
					@media (max-width: 19.875rem) {
						font-size: 0.5rem;
						margin-left: 0.625rem;
					}
				}
				.nav-links:hover, .active {
					color: rgba(255, 255, 255, 1);
				}
			}
			@media (max-width: 39.375rem) {
				nav, h1.logo {
					margin-bottom: -1.25rem;
					float: none;
					text-align: center;
				}
				.navicon {
					margin-bottom: 1rem;
				}
				nav {
					padding: 0.625rem 0.625rem 0.625rem 0;
					line-height: 1.8em;
					z-index: 999;
					width: 100;
					clear: both;
					float: none;
					text-align: center;
					a {
						display: inline-block;
						margin-bottom: 0.75em;
						&:last-of-type {
							margin-bottom: 0;
						}
					}
				}
				.show {
					display: block;
				}
			}
		}
	}
}

