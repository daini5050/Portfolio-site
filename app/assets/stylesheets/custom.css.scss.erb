body {
	background: honeydew;
	font-family: 'Raleway', sans-serif;
	font-size: 1rem;
	line-height: 1.3;
	h1 {
	}
}

.clearfix::before,
.clearfix::after {
    content: "";
    display: table;
}

.clearfix::after {
    clear: both;   
}

.hidden {
	display: none;
}

img {
	max-width: 100%;
	height: auto;
}

a {
	text-decoration: none;
	color: $primary-color;
}

.main, #head {
	width: 100%;
	min-height: 50vh;
	margin-bottom: 1rem;
	background: #5cc1af;
	background-image: linear-gradient(rgba(0,0,0,.5), rgba(0,0,0,.5)), url("home-bg.jpg");
	background-repeat: no-repeat;
	background-position: center center;
	background-size: cover;
	background-attachment: fixed;
	@include header-navbar;
}

.wrapper {
	position: relative;
	max-width: 60rem;
	width: 100%;
	margin: 0 auto;
	padding: 0.5rem 0 2rem 0
}

span, home-cta {
	width: 100%;
	text-align: center;
	color: $primary-color;
	h2 {
		font-size: 5.5rem;
		font-weight: 800;
		color: $primary-color;
		padding-top: 150px;
		letter-spacing: -1px;
		text-align: center;
		@media (max-width: 54.6875rem) {
			font-size: 4rem;
			padding-top: 120px;
		}
		@media (max-width: 40.625rem) {
			font-size: 3rem;
			padding-top: 100px;
		}
		@media (max-width: 30.875rem) {
			font-size: 2rem;
		}
	}
	h3 {
		font-size: 1.875rem;
		font-weight: 700;
		color: $primary-color;
		margin-top: 0;
		letter-spacing: -1px;
		text-align: center;
		@media (max-width: 40.625rem) {
			font-size: 1.25rem;
		}
		@media (max-width: 30.875rem) {
			font-size: 1rem;
		}
	}
	.port {
	text-align: center;
	}
}

.intro {
	line-height: 25px;
	margin-top: 2rem;
	font-weight: 300;
	color: $primary-color;
	@media (max-width: 30.875rem) {
			font-size: 0.75rem;
	}
}

.intro, .action {
	text-align: center;
}

a.learn-btn {
	margin-top: 2rem;
	margin-right: 10px;
	padding: 0.75rem 1.75rem;
	text-align: center;
	display: inline-block;
	background: tomato;
	@media (max-width: 30.875rem) {
			padding: 0.25rem 0.5rem;
			font-size: 0.75rem;
			margin-top: 3rem;
	}
}

a.learn-btn:hover {
	background: steelblue;
}

a.hire-btn {
	background-color: rgba(255,255,255,.14);
}

a.hire-btn:hover {
	background: rgba(255,255,255,.18);
}

.home-cta {
    transform: translateX(-50%);
    top: 160%;
    color: rgba(255,255,255,.8);
    display: block;
    font-size: 0.6875em;
    left: 50%;
    padding: 20px;
    position: absolute;
    letter-spacing: -2px;
    white-space: nowrap;
    letter-spacing: 2px;
    z-index: 2;   
}

.home-cta:hover {
    text-decoration: underline;   
}

/*****************************/
/* HEADER PORTFOLIO SECTION */
/****************************/
#head {
	min-height: 50vh;
	background: linear-gradient(rgba(0,0,0,.4), rgba(0,0,0,.2)), image-url("c3.jpg");
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	.port {
		padding-top: 150px;
		font-size: 70px;
	}
}

main {
	.work-title {
		text-align: center;
		margin-bottom: 2rem;
		padding: 50px 0;
		font-size: 23px;
		font-weight: 700;
		color: #333;
	}
	.portfolio-item {
		float: left;
		margin: 0;
		margin-bottom: 3%;
		padding-left: 46px;
		&:first-of-type {
			padding-left: 0;
		}
		@media (max-width: 39.375rem) {
			float: none;
			width: 100%;
			padding: 0;
		}
	}
}


