	.footer-nav-right {
		@media (max-width: 53.125rem) {
	    	display: none;
	    }
		/* BUSINESS CARD */
		#flip {
		    display: none;
		}
		    
		.card {
		    padding: 0;
		    display: block;
		    width: 100%;
		    height: 12rem;
		    margin: 0 auto;
		    transform-style: preserve-3d; /* without this line, card will rotate instead flip */
		}
    
		.front, 
		.back {
		    overflow: hidden;
		    position: absolute;
		    width: 100%;
		    height: 100%;
		    box-shadow: rgba(0,0,0,0.2) 0 0 3rem 0, rgba(0,0,0,0.1) 0 0 1rem 0;
		}
		    
		.front {
		    transform: translateZ(0.125rem); /* helps to give a slight impression of thickness to the card when its flippped */
		    background: #141c22;
		    border-radius: 2rem 0;
		    color: #cddbea;
		}
		    
		#flip:not(:checked) + label > .card {
		    transform: rotateY(0deg);
		    transition: transform 0.25s;
		}
		    
		#flip:checked + label > .card {
		    transform: rotateY(180deg);
		    transition: transform 0.25s;
		}
    
		.back {
		    transform: translateZ(-0.125rem) rotateY(180deg); /* helps to give a slight impression of thickness to the card when its flippped */
		    background: rgba(255,255,255,1);
		    border-radius: 0 2rem;
		    color: #cddbea;
		    border: 1px solid #2d5077;
		    padding-top: 1.5rem;
		}
		    
		.front_bg {
		    position: absolute;
		    left: -2.7rem;
		    top: -1rem;
		    font-weight: 700;
		    font-style: italic;
		    font-size: 20rem;
		    line-height: 15rem;
		    letter-spacing: -0.09em;
		    color: rgba(255,255,255,0.04);
		}
    
		.left_side {
		    left: 4.55rem;   
		}
		    
		.right_side {
		    left: 4.5rem;   
		}
		    
		.name {
		    position: absolute;
		    top: 4.5rem;
		    left: 0;
		    right: 0;
		    text-align: center;
		    font-size: 2.5rem;
		    font-weight: 300;
		}
		    
		.name span {
		    font-weight: 400;
		}
		    
		.profession {
		    position: absolute;
		    top: 6.75rem;
		    left: 0;
		    right: 0;
		    text-align: center;
		    font-size: 1rem;
		    font-weight: 300;
		}
    
		.strip {
		    position: absolute;
		    top: 5rem;
		    bottom: 5rem;
		    left: 0;
		    right: 0;
		    background: #141c22;
		    
		}
		    
		.left_back {
		    background: #193e4d;
		    position: absolute;
		    top: 0;
		    left: -1rem;
		    bottom: 0;
		    width: 9.5rem;
		}
		    
		.item {
		    position: relative;
		    margin-left: 3rem;
		    text-align: left;
		    font-size: 1.65rem;
		    font-weight: 700;
		    line-height: 1.5em;
		    z-index: 1;
		}
    
		.item a {
		    color: #2d5077;
		    transition: color 0.35s;
		}
		    
		.item:hover .fa {
		    color: rgba(255,255,255,1);
		    transition: color 0.35s;
		}
		    
		.item .fa {
		    width: 2em;
		    text-align: center;
		    margin-right: 2.25em;
		    color: #cddbea;
		    transition: color 0.35s;
		}
		    
		.item::before {
		    content: '';
		    position: absolute;
		    top: 0;
		    left: 0;
		    width: 0;
		    bottom: 0;
		    background: #1c1e29;
		    z-index: -1;
		    transition: width 0.35s;
		}
		    
		.item:hover::before {
		    width: 30rem;
		    transition: width 0.35s;
		}
    
		.item::after {
		    content: '';
		    position: absolute;
		    top: 0;
		    right: 18.4rem;
		    width: 0;
		    bottom: 0;
		    background: #d61b51;
		    z-index: -1;
		    transition: width 0.35s;
		}
		    
		.item:hover::after {
		    width: 9.25rem;
		    transition: width 0.35s;
		}
		    
		.item:hover a {
		    color: #cddbea;
		    transition: color 0.35s;
		}
		    
		.front:after {
		    content: 'CLICK TO FLIP';
		    background: #141c22;
		    text-align: center;
		    white-space: nowrap;
		    position: absolute;
		    top: 3rem;
		    bottom: 3rem;
		    left: 5.5rem;
		    right: 5.5rem;
		    font-size: 1.5rem;
		    font-weight: 700;
		    line-height: 100px;
		    cursor: pointer;
		    visibility: hidden;
		    opacity: 0;
		    transition: opacity 0.35s;
		}
    
		.front:hover:after {
		    visibility: visible;
		    opacity: 1;
		    transition: opacity 0.35s;
		}
	}
