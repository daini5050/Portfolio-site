@import 'normalize';

$primary-color: #f5f5f5;

@mixin header-navbar {
	.wrapper {
		position: relative;
		width: 100%;
		.header {
			margin-top: 0;
			padding-top: 20px;
			margin-bottom: -30px;
			width: 100%;
			.logo {
				float: left;
				margin-top: 10px;
				font-weight: 700;
				letter-spacing: -3px;
			}
			.navicon {
				float: right;
				color: #fff;
				margin-top: 0.9rem;
				font-size: 1.5rem;
				display: none;
				.fa-bars, .fa-close {
					border: 1px solid #fff;
					padding: 4px 6px;
					border-radius: 4px;
					cursor: pointer;
				}
			}
			nav {
				float: right;
				margin-top: 22px;
				.nav-links {
					margin-left: 25px;
					font-size: 16px;
					font-weight: 400;
					transition: all 0.2s;
					color: rgba(255, 255, 255, .7);
					@media (max-width: 30.875rem) {
						font-size: 0.75rem;
					}
				}
				.nav-links:hover, .active {
					color: rgba(255, 255, 255, 1);
				}
			}
			@media (max-width: 39.375rem) {
				nav, h1.logo {
					margin-bottom: -20px;
					float: none;
					text-align: center;
				}
				.navicon {
					margin-bottom: 1rem;
				}
				nav {
					padding: 10px 10px 10px 0;
					line-height: 1.8em;
					z-index: 999;
					width: 100;
					clear: both;
					float: none;
					text-align: center;
					a {
					display: inline-block;
						margin-bottom: 0.75em;
						&:last-of-type {
							margin-bottom: 0;
						}
					}
				}
				.show {
					display: block;
				}
			}
		}
	}
}

* {
	margin: 0;
	padding: 0;
	-moz-box-sizing: border-box;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
}

